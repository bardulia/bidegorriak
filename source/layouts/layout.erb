<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Gipuzkoako bidegorriak" %></title>
    
    <%= stylesheet_link_tag "main" %>
   
    <script src="http://b5m.gipuzkoa.net/api/1.0/eu/library/openlayers-ext/openlayers-ext-loader.js" type="text/javascript"></script>
    <script type="text/javascript">
    OpenLayersExtLoader.load( {
      "version":  "1.0",
      "debug":    false,
      "height":   "800px",
      "config": {
        "whatishere": {
          "enabled": false
        }
      }
    });
    </script>
    <%= javascript_include_tag  "main", "application" %>
  </head>
  
  <body>
    <%= yield %>
  </body>
</html>